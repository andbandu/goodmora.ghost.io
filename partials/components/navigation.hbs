    <div data-w-id="55bf83f7-de43-f23d-ff30-f0c293485a0c" class="header-bg" style="will-change: opacity; opacity: 0;">
    </div>
    <div class="g--padding-120-32-16px">
        <div class="g--main-maxw-1200px">
            <div class="header-content"><a href="{{@site.url}}" aria-current="page"
                    class="link-brand w-inline-block w--current"><img
                        src="{{@site.logo}}"
                        loading="lazy" alt="" class="image-brand"></a>
                <div class="wrapper-content-header">
                    {{navigation}}
                    
                    <div class="header-wrapper-button"><a data-w-id="4132906d-29b2-fb41-f692-e3ad3fe767e9"
                            href="/download" class="button-cta default mobile w-inline-block">
